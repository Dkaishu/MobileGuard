<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/TextTitle"
        android:background="#fcc"
        android:text="添加黑名单号码" />

    <EditText
        android:id="@+id/et_blacknumber_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:inputType="phone"
        android:textColor="#000"
        android:maxLength="11"/>

    <RadioGroup
        android:id="@+id/rg_blacknumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_blacknumber_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="短信"
            android:textColor="#000" />

        <RadioButton
            android:id="@+id/rb_blacknumber_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话"
            android:textColor="#000" />

        <RadioButton
            android:id="@+id/rb_blacknumber_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所有"
            android:textColor="#000" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_blacknumber_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="#000" />
        <Button
            android:id="@+id/bt_blacknumber_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确认"
            android:textColor="#000" />
    </LinearLayout>


</LinearLayout>